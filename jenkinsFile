pipeline {
agent any
stages {
        stage('Build') {
            steps {
                echo 'Building..'
				sh '''
						set +x
						echo $USER
						sudo hostname -i
						cd c_programs
						echo -e "\n\n**************************** This is a Build JOB **************************** "

						if [[ -x "ABC.exe" ]]; then
							echo "STEP 1:	Cleaning existing builds ........"
								sudo ls *.exe | nl | sed 's/	/) /g' | tr '\n' ' ' 
									rm -f "./ABC.exe" 
							echo -e "\n\nSTEP 2:	Cleaning existing Object files........"
								sudo ls *.o | nl | sed 's/	/) /g' | tr '\n' ' '
									rm -f *.o
						fi   
							echo -e "\n\nSTEP 3:	Initiating Build for below files (using make)........"
								sudo ls *.c | nl | sed 's/	/) /g' | tr '\n' ' '
							echo -e "\n"    
								sudo make

						#dt=$(date +%Y-%m-%d_%H:%M:%S)

						if [[ -x "./ABC.exe" ]]; then  
							echo -e "\nSTEP 4:	Build Successful"
							echo "       	BUILD_FILE: $(pwd)/ABC.exe"
							echo " -------------------------------- $(pwd)" 
							[[ -d '/opt/jenkins/workspace/Build' ]] || sudo mkdir --parents '/opt/jenkins/workspace/Build/c_programs'
							cd /opt/jenkins/workspace/Build/
							[[ -d "/opt/jenkins/workspace/Build/artifactory" ]] && sudo rm -rf /opt/jenkins/workspace/Build/artifactory 
							sudo git clone git@github.com:Madhu-B-C/artifactory.git
							cd artifactory
							file=$(ls ABC_* | sort -n | tail -1)
							if [[ -n "$file" ]]; then
								filename="${file%.*}"
								old_version=$(echo $filename | awk -F 'v' '{print $2}')
								new_version=$(echo "$old_version + 0.1" | bc)
							else 
								file='NA'; old_version='0.0'; new_version='1.0'
							fi    
							echo -e "\nLAST_BUILD: $file \nOLD_BUILD_VERSION: $old_version \nNEW_BUILD_VERSION: $new_version"
							
							sudo cp "/opt/jenkins/workspace/Build/c_programs/ABC.exe" "/opt/jenkins/workspace/Build/artifactory/ABC_v${new_version}.exe"
							
							sudo git config --global push.default simple
							sudo git config --global user.name "Jenkins"
							sudo git config --global user.email master.jenkins@build.com
							sudo git status
							sudo git add --all && git commit -m "Build ABC_${dt}.exe"
							sudo git push origin master
							echo -e "\nSTEP 3:	Build pushed to artifactory"
								
						else
							echo -e "**************** ERROR *********************\n"
							echo "Build failure - No executable file generated"
							echo -e "********************************************\n"
							exit 1
						fi    

						echo -e "\n************************************************************************** "
				'''
				
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying to TEST environment..'
				sh '''
					set +x

					[[ -d "./artifactory" ]] && rm -rf ./artifactory 
					sudo git clone git@github.com:Madhu-B-C/artifactory.git
					cd artifactory
					file=$(ls ABC_* | sort -n | tail -1) 

				echo -e "\n\n**************************** This is a Deploy JOB $file **************************** "

				echo -e "\nSTEP 1: Deploying $file with default input........"
				./$file -v -i <<<"5 400 500 600"

				if [ $? -eq 0 ]; then
				  if [[ -x "./$file" ]]; then  
					  echo -e "\nSTEP 2:	Deployment Successful - Build pushed to artifactory"
					  echo "       	ARTIFACTORY_PATH: /home/ec2-user/builds/$file"
				  fi
				else  
					  echo -e "**************** ERROR *********************\n"
					  echo "Deployment failure - ABC.exe cannot be executed "
					  echo -e "********************************************\n"
					  exit 1
				fi
				'''
            }
        }
        stage('test') {
            steps {
                echo 'Testing....'
				sh '''
				set +x

					[[ -d "./artifactory" ]] && rm -rf ./artifactory 
					sudo git clone git@github.com:Madhu-B-C/artifactory.git
					cd artifactory
					file=$(ls ABC_* | sort -n | tail -1)
					
				echo -e "\n\n**************************** This is a Deploy JOB for $file**************************** "
				count=1

				for i in {1..10}
				do
					oe=$((1000 + RANDOM % 10000))
					fact=$((1 + RANDOM % 15))
					num1=$((1 + RANDOM % 100))
					num2=$((1 + RANDOM % 1000))
					
						echo -e "\n-------------------------- TEST_CASE ($count) --------------------------"
						sudo ./$file -v -i <<<"$fact $oe $num1 $num2"
					
					if [ $? -eq 0 ]; then
						echo -e "\n      RESULT -> TEST_CASE (${count}): SUCCESS" 
					else  
						echo -e "\n      RESULT -> TEST_CASE (${count}): FAILED"
						exit 1
					fi

					echo "-------------------------------------------------------------------"
					((count++))
				done
				'''
					}
				}
    }
}
